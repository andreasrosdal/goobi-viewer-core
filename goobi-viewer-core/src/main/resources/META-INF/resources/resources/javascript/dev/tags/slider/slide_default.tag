<slide_default>
	<a class="swiper-link slider-{this.opts.stylename}__link" href="{this.opts.link}" target="{this.opts.link_target}" rel="noopener">
		<div class="swiper-heading slider-{this.opts.stylename}__header">{this.opts.label}</div>
		<div class="swiper-image slider-{this.opts.stylename}__image" style="background-image: url({this.opts.image})"></div>
		<div class="swiper-description slider-{this.opts.stylename}__description">{this.opts.description}</div>
	</a>
</slide_default>