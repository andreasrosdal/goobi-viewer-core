<slide_default>

	<a class="slider-{this.opts.stylename}__link" href="{this.opts.link}" target="{this.opts.link_target}">
				<h3 class="slider-{this.opts.stylename}__header">{this.opts.label}</h3>
				<div class="slider-{this.opts.stylename}__image" style="background-image: url({this.opts.image})">
				</div>
				<div class="slider-{this.opts.stylename}__description">{this.opts.description}</div>
			</a>


</slide_default>