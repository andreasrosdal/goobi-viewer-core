<?xml version="1.0" encoding="UTF-8" ?>
<component>
	<jsfComponent>
		<library>cms/components/frontend/component</library>
		<name>faqitem</name>
	</jsfComponent>
	<label>cms_component__faqitem__label</label>
	<description>cms_component__faqitem__desc</description>
	<icon>cms/components/frontend/component/icon/text.png</icon>
	<content>
		<item id="title">
			<label>cms_content__faqitem_title__label</label>
			<description>cms_content__faqitem_title__desc</description>
			<className>io.goobi.viewer.model.cms.pages.content.types.CMSShortTextContent</className>
			<jsfComponent>
				<library>cms/components/backend/content</library>
				<name>text</name>
			</jsfComponent>
		</item>
		<item id="text">
			<label>cms_component__faqitem_text__label</label>
			<description>cms_content__faqitem_text__desc</description>
			<className>io.goobi.viewer.model.cms.pages.content.types.CMSMediumTextContent</className>
			<jsfComponent>
				<library>cms/components/backend/content</library>
				<name>htmltext</name>
			</jsfComponent>
		</item>
	</content>

	<attribute name="width">
		<value label="50 %">50</value>
		<value label="100 %" default="true">100</value>
	</attribute>

	<attribute name="hideOnScreenSizes" type="toggle">
		<value label="Hide on desktop">hideDesktop</value>
		<value label="Hide on mobile">hideMobile</value>
	</attribute>
	
</component>