<?xml version="1.0" encoding="UTF-8" ?>
<component>
	<label>cms_component__previewimage__label</label>
	<description>cms_component__previewimage__desc</description>
	<icon>cms/components/frontend/component/icon/image.png</icon>
	<scope>preview</scope>
	<content>
		<item id="image">
			<label>cms_component__image_label</label>
			<description>cms_component__image_desc</description>
			<className>io.goobi.viewer.model.cms.pages.content.types.CMSMediaContent</className>
			<jsfComponent>
				<library>cms/components/backend/content</library>
				<name>media</name>
			</jsfComponent>
		</item>
	</content>

	<attribute name="width">
		<value label="50 %">50</value>
		<value label="100 %" default="true">100</value>
	</attribute>
	
	<attribute name="lightbox" label="cms__component_attribute__lightbox" type="toggle">
		<value label="LightBoxButtonLabel">true</value>
	</attribute>
</component>